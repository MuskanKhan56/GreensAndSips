<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Greens And Sips</title>

    <!--  Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">GreensAndSips</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Main Navigation Links -->
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Menu/Index">Menu</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Contact/Index">Contact</a></li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Checkout/Checkout">Checkout</a>
                        </li>

                        <!-- Show Admin and Logout options for authenticated users -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin")) // Show Admin link only to Admins
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/Admin/Index">Admin</a></li>
                            }
                            <li class="nav-item">
                                <form method="post" asp-page="/Identity/Account/Logout">
                                    <button type="submit" class="nav-link btn btn-link border-0">Logout</button>
                                </form>
                            </li>
                        }

                    </ul>

                    <!--  Login Partial View -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!--  Main Content Container -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()  <!--  Placeholder for page-specific content -->
        </main>
    </div>

    <!--  Footer -->
    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2024 - Greens And Sips | <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!--  Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false) <!-- Placeholder for additional page-specific scripts -->
</body>
</html>
