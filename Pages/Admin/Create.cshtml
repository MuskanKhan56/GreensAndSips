@page
@model GreensAndSips.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create"; // ✅ Sets the page title
    Layout = "~/Pages/Shared/_Layout.cshtml"; // ✅ Uses the shared layout
}

<h1>Create</h1>

<h4>FoodItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Form to create a new FoodItem -->
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Input field for Item Name -->
            <div class="form-group">
                <label asp-for="FoodItem.ItemName" class="control-label"></label>
                <input asp-for="FoodItem.ItemName" class="form-control" />
                <span asp-validation-for="FoodItem.ItemName" class="text-danger"></span>
            </div>

            <!-- Input field for Item Description -->
            <div class="form-group">
                <label asp-for="FoodItem.ItemDesc" class="control-label"></label>
                <input asp-for="FoodItem.ItemDesc" class="form-control" />
                <span asp-validation-for="FoodItem.ItemDesc" class="text-danger"></span>
            </div>

            <!-- Checkbox for Availability -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FoodItem.Available" />
                    @Html.DisplayNameFor(model => model.FoodItem.Available)
                </label>
            </div>

            <!-- Checkbox for Vegetarian Option -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FoodItem.Vegetarian" />
                    @Html.DisplayNameFor(model => model.FoodItem.Vegetarian)
                </label>
            </div>

            <!-- Input field for Price -->
            <div class="form-group">
                <label asp-for="FoodItem.Price" class="control-label"></label>
                <input asp-for="FoodItem.Price" class="form-control" />
                <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
            </div>

            <!-- Input field for Image Upload -->
            <div class="form-group">
                <label asp-for="FoodItem.ImageData" class="control-label"></label>
                <input asp-for="FoodItem.ImageData" class="form-control" />
                <span asp-validation-for="FoodItem.ImageData" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link to go back to the FoodItem list -->
<div>
    <a asp-page="Index">Back to List</a>
</div>

<!-- Include validation scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
