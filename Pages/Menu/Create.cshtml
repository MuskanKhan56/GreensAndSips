@page
@model GreensAndSips.Pages.Menu.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FoodItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodItem.ItemName" class="control-label"></label>
                <input asp-for="FoodItem.ItemName" class="form-control" />
                <span asp-validation-for="FoodItem.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.ItemDesc" class="control-label"></label>
                <input asp-for="FoodItem.ItemDesc" class="form-control" />
                <span asp-validation-for="FoodItem.ItemDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Available" class="control-label"></label>
                <input asp-for="FoodItem.Available" class="form-control" />
                <span asp-validation-for="FoodItem.Available" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Vegetarian" class="control-label"></label>
                <input asp-for="FoodItem.Vegetarian" class="form-control" />
                <span asp-validation-for="FoodItem.Vegetarian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Price" class="control-label"></label>
                <input asp-for="FoodItem.Price" class="form-control" />
                <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.ImageDescription" class=" control-label">Image Description</label>
                <input asp-for="FoodItem.ImageDescription" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Upload Image</label>
                <input type="file" asp-for="ImageFile" class="form-control" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
