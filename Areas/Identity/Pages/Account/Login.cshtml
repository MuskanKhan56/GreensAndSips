@page
@model LoginModel

@{
    // Set the title of the page
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <!-- Form for user login -->
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />

                <!-- Display validation errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Email Input Field -->
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" required />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span> <!-- Validation error message -->
                </div>

                <!-- Password Input Field -->
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" required />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span> <!-- Validation error message -->
                </div>

                <!-- Remember Me Checkbox -->
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe) <!-- Label for Remember Me checkbox -->
                        </label>
                    </div>
                </div>

                <!-- Login Button -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <!-- Include validation scripts for form validation -->
    <partial name="_ValidationScriptsPartial" />
}
