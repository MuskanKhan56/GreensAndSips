@page
@model IndexModel

@{
    // Set the page title and active navigation page
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!-- Display the page title -->
<h3>@ViewData["Title"]</h3>

<!-- Display a status message if there is any -->
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <!-- Profile update form -->
        <form id="profile-form" method="post">
            <!-- Display validation summary for the model -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Display username (disabled so it cannot be edited) -->
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <!-- Input field for updating phone number -->
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <!-- Display validation error for phone number if invalid -->
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Save button for submitting the form -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Include client-side validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}
